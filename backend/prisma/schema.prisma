generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id     String   @id @default(uuid())
  name   String
  price  Decimal  @db.Decimal(10, 2)
  type   String
  imgUrl String
}

model Buyer {
  id              String   @id @default(uuid())
  name            String
  contact         String   @unique
  deliveryAddress String
  password        String
  orders          Order[]
}

model Order {
  id         String      @id @default(uuid())
  buyerId    String
  productId  String
  buyer      Buyer       @relation(fields: [buyerId], references: [id])
  items      Json
  status     OrderStatus @default(PENDING)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Admin {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
}


enum OrderStatus {
  PENDING
  IN_PROGRESS
  DELIVERED
}
